{
  "compilerOptions": {
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",
    "lib": [
      "es2016",
      "es2017",
      "es2017.object"
    ],
    "jsx": "React",
    "jsxFactory": "h",
    "strict": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx"
  ],
  "exclude": [
    "./src/__tests__",
    "./src/helpers/__tests__"
  ]
}
